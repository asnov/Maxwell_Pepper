{
    "name" : "FB Inviter",
    "description" : "Automatically invite people who liked your posts to like your fan page.",
    "version" : "1.0",
    "manifest_version": 2,
    "author": "Hermes",

    "icons": { "16": "images/icon16.png",
           "48": "images/icon48.png",
          "128": "images/icon128.png" },

    "permissions": ["tabs", "storage", "http://*/",
        "https://*/"],

    "background": {
        "scripts": ["js/background.js"]
    },

    "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": [
        "js/jquery.min.js",
        "js/clicker.js"
      ]
    }
],

    "browser_action" : {
        "default_popup" : "popup.html"
    }
}
